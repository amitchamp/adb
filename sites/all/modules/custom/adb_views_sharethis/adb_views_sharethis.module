<?php

/**
 * @file
 * A global views field that allows you to share current page using sharethis.
 */

/**
 * Implements hook_views_api().
 */
function adb_views_sharethis_views_api() {
  return array(
    'api' => 3,
    'path' => drupal_get_path('module', 'adb_views_sharethis') . '/includes/views',
  );
}
